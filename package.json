{
  "name": "sota-peak-finder",
  "version": "3.5.0",
  "type": "module",
  "description": "SOTA Peak Finder: Find nearby summits worldwide with GPS. 179,000+ SOTA summits with references, points, altitude, and distance. Fully offline PWA for activators.",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:sota": "bun scripts/build-sota-database.mjs",
    "build:sitemaps": "bun scripts/generate-summit-sitemap.mjs",
    "build:all": "bun run build:sota && bun run build:sitemaps && bun run build",
    "setup": "bun scripts/setup-dev-database.ts",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/bun": "latest",
    "@types/leaflet": "^1.9.21",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "^4.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-window": "^7.4.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@sqlite.org/sqlite-wasm": "^3.51.2-build6",
    "esbuild": "^0.27.3",
    "i18next": "^25.8.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^16.5.4",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^7.13.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
